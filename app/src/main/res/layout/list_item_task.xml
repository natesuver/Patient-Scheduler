<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@color/scheduleRow">
    <LinearLayout
        android:id="@+id/chkLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/performed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:height="20dp"
            android:text=""
            android:enabled="false"
            />
        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:text="Task Name"
            android:textColor="@color/scheduleText"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/planNotesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"
        android:text="@string/plan_notes_label"
        android:textColor="@color/scheduleText"
        android:layout_below="@id/chkLayout"
        />
    <TextView
        android:id="@+id/planNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="50dp"
        android:text="PlanNotes"
        android:textColor="@color/scheduleText"
        android:layout_below="@id/planNotesLabel"
        />
    <TextView
        android:id="@+id/visitNotesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"
        android:text="@string/visit_notes_label"
        android:textColor="@color/scheduleText"
        android:layout_below="@id/planNotes"
        />
    <TextView
        android:id="@+id/visitNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/scheduleText"
        android:layout_below="@id/visitNotesLabel"
        />

</RelativeLayout>
